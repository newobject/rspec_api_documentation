<!DOCTYPE html>
<html>
<head>
  <title>{{api_name}} > {{ index_and_desc }}</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="{{ url_prefix }}/assets/stylesheets/bootstrap.css"/>
  <link rel="stylesheet" href="{{ url_prefix }}/assets/stylesheets/main.css"/>
</head>
<body>
<div class="container">
  <div class="page-header">
    <h1>{{ index_and_desc }}</h1>
  </div>

  <ul class="breadcrumb">
    {{#ancestors}}
      <li>
        <a href="{{ url_prefix }}/{{ file_path }}">{{ description }}</a>
        <span class="divider">/</span>
      </li>
    {{/ancestors}}
    <li class="active">
      {{description}}
    </li>
  </ul>

  <ul class="unstyled">
    {{# examples }}
    <li class="api">
    <a href="{{ url_prefix }}/{{file_path}}">{{index_number}}. {{ description }}</a>
    </li>
    {{/ examples }}
    {{# children }}
      {{> rspec_api_documentation/mustaches/subgroups}}
    {{/ children }}
  </ul>

</div>
</body>
</html>
